<section>
  <h1>All Robots</h1>
  <%= link_to "New Robot", new_robot_path %>
</section>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Assign Tasks</th>
    </tr>
  </thead>
  <tbody>
    <% @robots.each do |robot| %>
      <tr>
        <td><%= link_to robot.name, robot_path(robot) %></td>
        <td><%= robot.robot_type.humanize %></td>
        <td>
          <%= form_with(url: assign_tasks_robot_path(robot), method: :post) do |form| %>
            <%= form.submit "Assign Tasks" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
